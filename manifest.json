{
  "name": "思源笔记：视频笔记插件",
  "version": "0.2.1",
  "manifest_version": 3,
  "description": "思源笔记：视频笔记插件，支持B站、Youtube、百度网盘做视频笔记",
  "icons": {
    "500": "icon.png"
  },
  "action": {
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*","*://*/stage/build/desktop/*","*://*.youtube.com/*","*://pan.baidu.com/*","*://*/plugins/siyuan-blog/*","*://*/supr-blog/*"],
      "js": ["zepto.min.js", "common.js", "scripts/baidu_disk.js", "scripts/bilibili_iframe.js", "scripts/bilibili_web.js", "scripts/youtube_embed.js", "scripts/youtube_web.js", "scripts/siyuan.js","content.js"],
      "all_frames": true
    }
  ]
}